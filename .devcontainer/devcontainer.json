	"name": "Ruby",
	"image": "mcr.microsoft.com/devcontainers/ruby:1-3.3-bullseye",
	"features": {
		"ghcr.io/itsmechlark/features/act:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {}
